{
  "name": "block-monitor-server",
  "version": "1.0.0",
  "description": "A backend service for monitoring blockchain transactions.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "format": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "generate:docs": "typedoc",
    "dev": "nodemon",
    "dev:watch": "concurrently npm:dev npm:test:watch",
    "build": "tsc",
    "build:dev": "npm run postbuild && rm -rf dist && tsc",
    "prepare": "husky install",
    "test": "jest -i --runInBand --verbose",
    "test:coverage": "jest -i --runInBand --coverage --verbose",
    "test:watch": "jest -i --runInBand --watchAll --verbose"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn format"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterlogo/block-monitor-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/peterlogo/block-monitor-server/issues"
  },
  "homepage": "https://github.com/peterlogo/block-monitor-server#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/jwt": "^8.0.0",
    "ajv": "^8.12.0",
    "env-schema": "^5.2.1",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "mongoose": "^8.3.1",
    "pino": "^8.20.0"
  }
}
